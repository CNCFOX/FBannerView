<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.cfox.fbanlib.FBannerView
        android:id="@+id/multi_banner_view"
        app:lvp_delayTime="3000"
        app:lvp_isAutoLoop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>

    <com.cfox.fbanlib.CircleIndicator
        android:layout_alignParentBottom="true"
        android:id="@+id/multi_bannner_point"
        app:ci_normalRadiusColor="#FFF"
        app:ci_selectedRadiusColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

</RelativeLayout>